---
import { ClientRouter } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';

import '../styles/paragraph.css'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	h1 {
		color: #8a1212;
	}
</style>
